{
    "name": "atelierspierrot/mime-mailer",
    "type": "library",
    "description": "A package to send rich MIME emails.",
    "keywords": [ "MIME", "emailing" ],
    "homepage": "http://github.com/atelierspierrot/mime-mailer",
    "license": "Apache-2.0",
    "authors": [{
        "name": "Les Ateliers Pierrot & contributors",
        "email": "contact@ateliers-pierrot.fr",
        "homepage": "http://www.ateliers-pierrot.fr/"
    },{
        "name": "Pierre Cassat",
        "homepage": "http://e-piwi.fr/"
    }],
    "require": {
        "php": ">=5.3.0",
        "atelierspierrot/patterns": "1.*",
        "atelierspierrot/library": "1.*",
        "atelierspierrot/validators": "1.*"
    },
    "require-dev": { 
        "sami/sami": "@stable",
        "phpmd/phpmd" : "@stable"
    },
    "autoload": { 
        "psr-0": { "MimeMailer": "src" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1-dev"
        }
    }
}
